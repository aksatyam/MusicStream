# MusicStream Production Environment
# Copy this file to .env and fill in the values
# Generate secrets with: openssl rand -hex 32

# ─── Domain ────────────────────────────────────────────────
DOMAIN=music.example.com
# Email for Let's Encrypt certificate notifications
SSL_EMAIL=admin@example.com

# ─── Database ──────────────────────────────────────────────
POSTGRES_PASSWORD=CHANGE_ME_generate_with_openssl_rand_hex_32

# ─── Redis ─────────────────────────────────────────────────
REDIS_PASSWORD=CHANGE_ME_generate_with_openssl_rand_hex_32

# ─── JWT Authentication ───────────────────────────────────
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32

# ─── Extractors (optional, yt-dlp is used as fallback) ─────
# Set these if you run your own Invidious/Piped instances
INVIDIOUS_URL=http://localhost:3001
PIPED_URL=http://localhost:3002

# ─── CORS ──────────────────────────────────────────────────
# Comma-separated origins allowed to access the API
CORS_ORIGINS=https://music.example.com

# ─── Logging ───────────────────────────────────────────────
LOG_LEVEL=info
